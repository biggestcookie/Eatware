    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch API",
            "type": "python",
            "pythonPath": "${command:python.interpreterPath}",
            "request": "launch",
            "module": "uvicorn",
            "justMyCode": true,
            "args": [
                "main:app",
            ],
            "envFile": "${workspaceFolder}/.env",
            "console": "internalConsole",
            "redirectOutput": true
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "pythonPath": "${command:python.interpreterPath}",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole",
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}